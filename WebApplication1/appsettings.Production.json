// appsettings.Production.json
{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "TU_CADENA_DE_CONEXION_PRODUCCION"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://tu-frontend-produccion.com"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE"
    ],
    "AllowedHeaders": [
      "Authorization",
      "Content-Type",
      "Accept",
      "Origin"
    ]
  },
  "SecuritySettings": {
    "RequireHttps": true,
    "EnableSwagger": false
  }
}